{
    "manifest_version": 2,

    "name": "chrome-scn-dev",
    "description": "Scn Dev Extension for Chrome",
    "version": "1.0.0",
    "icons": {
        "16": "assets/img/icon-16.png",
        "48": "assets/img/icon-48.png",
        "128": "assets/img/icon-128.png"
    },

    "background": {
        "persistent": false,
        "scripts": ["assets/js/background.js"]
    },

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["assets/js/content.js"]
    }],

    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}
